<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bill Reminders</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            background-color: #f4f4f4;
            color: #333;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        th, td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: left;
        }
        th {
            background-color: #007bff;
            color: white;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>Bill Reminders</h1>
    <table>
        <thead>
            <tr>
                <th>Bill Name</th>
                <th>Amount</th>
                <th>Due Date</th>
                <th>ReminderDate</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            <% billreminders.forEach(bill => { %>
                <tr>
                    <td><%= bill.billName %></td>
                    <td><%= bill.amount %></td>
                    <td><%= bill.dueDate %></td>
                    <td><%= bill.reminderDate %></td>
                    <td><%= bill.notes %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
